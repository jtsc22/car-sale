{
  "compilerOptions": {
    "resolveJsonModule": true,
    "esModuleInterop": false ,
    "paths": {
      "*": [
        "types/*"
      ]
    },
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "strictNullChecks": false,
    "lib": [
      "es5",
      "es6",
      "dom"
    ],
    "pretty": true,
    "sourceMap": true,
    "target": "es5",
    "outDir": "dist",
    "baseUrl": "src",
    "strict": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}